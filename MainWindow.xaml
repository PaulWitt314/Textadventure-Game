<Window x:Class="Textadventure_Paul_Witt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Textadventure_Paul_Witt"
        mc:Ignorable="d"
        Title="  Textadventure Paul Witt" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="NewGameBtn" Content="Neues Spiel" Grid.Row="1" HorizontalAlignment="Center" Height="25" Width="200" Click="NewGameBtn_Click"/>
        <Button x:Name="LoadGameBtn" Content="Laden" Grid.Row="2" HorizontalAlignment="Center" Height="25" Width="200"/>
        <Button x:Name="ExitGameBtn" Content="Schließen" Grid.Row="3" HorizontalAlignment="Center" Height="25" Width="200" Click="ExitGameBtn_Click"/>
        <Label Content="Paul Witt" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
    </Grid>
</Window>
